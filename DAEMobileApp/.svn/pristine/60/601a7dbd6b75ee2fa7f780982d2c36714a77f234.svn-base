<ion-view id="interventionConfirmed" title="Conferma intervento">
    <!--left button on navigation bar-->
    <ion-nav-buttons side="left">
        <a ng-click="$ionicGoBack()" class="button back-button buttons  button-clear header-item nav-back-btn">
            <i class="ion-android-arrow-back "></i>
        </a>
    </ion-nav-buttons>
    <ion-content class="has-toolbar">
        <md-card class="intervention-card">
            <md-card-header>
                <md-card-header-text class="text-center">
                    <span class="md-title">Bene, sei arrivato a destinazione</span>
                </md-card-header-text>
            </md-card-header>
            <md-card-content class="no-padding">
                <md-list>
                    <md-list-item class="md-2-line">
                        <md-icon md-font-icon="dae-mapsp2" class="detail-icon"></md-icon>
                        <div class="md-list-item-text">
                            <h3 class="detail-label">Indirizzo:</h3>
                            <h3 class="detail-data"> {{vm.event.indirizzo}}{{vm.event.civico? ", ": ""}}{{vm.event.civico}}</h3>
                            <h3 class="detail-data"> {{vm.event.comune}}</h3>
                        </div>
                    </md-list-item>
                    <md-list-item class="md-2-line">
                        <md-icon md-font-icon="dae-scadenza" class="detail-icon"></md-icon>
                        <div class="md-list-item-text">
                            <h3 class="detail-label">Data ora Emergenza</h3>
                            <h3 class="detail-data">{{vm.event.timestamp | date : 'dd/MM/yyyy HH:mm'}}</h3>
                        </div>
                    </md-list-item>
                    <md-list-item class="md-2-line">
                        <md-icon md-font-icon="dae-scadenza" class="detail-icon"></md-icon>
                        <div class="md-list-item-text">
                            <h3 class="detail-label">Ora accettazione</h3>
                            <h3 class="detail-data">{{vm.event.frAcceptDate | date : 'HH:mm'}}</h3>
                        </div>
                    </md-list-item>
                    <md-list-item class="md-2-line">
                        <md-icon md-font-icon="dae-scadenza" class="detail-icon"></md-icon>
                        <div class="md-list-item-text">
                            <h3 class="detail-label">Ora arrivo sul posto</h3>
                            <h3 class="detail-data">{{vm.event.frCloseDate | date : 'HH:mm'}}</h3>
                        </div>
                    </md-list-item>
                </md-list>
            </md-card-content>

            <md-card-footer layout="row" class="text-center">
                <div class="image" flex="50">
                    <img ng-click="vm.navigateTo('app.rhythm')" class="shortcut" src="img/bot_ritmo.png" />
                </div>
                <div class="image" flex="50">
                    <img ng-click="vm.openExternalLink(config.externalLink.GUIDE)" class="shortcut" src="img/bot_guida.png" />
                </div>
            </md-card-footer>
            <md-card-actions layout="column" layout-align="center center">
            </md-card-actions>
        </md-card>
    </ion-content>
</ion-view>