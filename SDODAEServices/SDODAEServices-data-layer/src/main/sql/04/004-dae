ALTER TABLE  DAE_DAE
 ADD (TIPOLOGIA_DISPONIBILITA  VARCHAR2(64));
 
ALTER TABLE DAE_PROGRAMMA_MANUTENZIONE
MODIFY(NOTA VARCHAR2(1024 BYTE));


 ALTER TABLE DAE_DAE
 ADD (DATA_VALIDAZIONE  DATE);
 
 ALTER TABLE DAE_DAE
 ADD (UTENTE_VALIDAZIONE  VARCHAR2(1024));
 
 
 /* Formatted on 17/11/2017 16:50:52 (QP5 v5.256.13226.35538) */
UPDATE dae_dae d
   SET DATA_VALIDAZIONE =
          (SELECT MAX (H.OPERATION_DATE)
             FROM DAE_DAE_HISTORY h
            WHERE H.DAE_ID = d.id AND H.OPERATION = 'VALIDATION'),
       UTENTE_VALIDAZIONE =
          (SELECT U.EMAIL
             FROM DAE_DAE_HISTORY h, dae_utente u
            WHERE H.DAE_ID = d.id AND H.OPERATION = 'VALIDATION' AND u.id = H.UTENTE_ID);
            
commit;    
            