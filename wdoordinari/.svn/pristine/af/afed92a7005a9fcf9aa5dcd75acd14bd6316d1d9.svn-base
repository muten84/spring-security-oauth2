core-table {
  font-size: 13px;
  font-family: "Open Sans", "Helvetica Neue", Helvetica, Arial, sans-serif;
  line-height: 1.625;
  table {
    display: flex;
    flex-direction: column;
    width: 200px;
    max-height: 69vh;
    background-color: #ECF0F1;
  }
  tr {
    display: flex;
    height: 38px;
  }
  .table {
    thead {
      th {
        font-weight: normal;
        font-size: 13px;
        border-bottom-width: 0px;
        border-top-left-radius: 0px;
        border-top-right-radius: 0px;
      }
    }
  }
  .thead {
    margin-bottom: 0;
  }
  thead {
    //width: calc( 100% - 18px);
    th {
      height: 100%;
    }
  }
  /* tbody {
    max-height: 69vh;
    overflow-y: scroll;
    overflow-x: hidden;
  }*/
  td {
    span {
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
    }
  }
  td,
  th {
    min-width: 0;
    flex-shrink: 3;
    flex-basis: 0;
    flex-grow: 1;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }
  tr:nth-child(odd) {
    background: rgba(0, 66, 81, 0.10);
  }
  tr:nth-child(even) {
    background: #FFF;
  }
}
