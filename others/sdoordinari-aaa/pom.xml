	<build>
		<plugins>
			<plugin>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-maven-plugin</artifactId>
				<executions>
					<execution>
						<goals>
							<goal>repackage</goal>
						</goals>
						<configuration>
							<classifier>exec</classifier>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>de.jpdigital</groupId>
				<artifactId>hibernate5-ddl-maven-plugin</artifactId>
				<version>1.0.1-hibernate-5.2.4.Final</version>

				<configuration>
					<dialects>
						<param>oracle10g</param>
					</dialects>
					<packages>
						<param>it.eng.care.platform.authentication.impl.persist.model</param>
					</packages>
				</configuration>
				<executions>
					<execution>
						<goals>
							<goal>gen-ddl</goal>
						</goals>
						<phase>process-classes</phase>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
