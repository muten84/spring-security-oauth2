	</div>
	<div class="col-4 col-line-height-high">
		<small class="text-muted">Convenzione</small>
		<label class="col-form-label">{{address.authority?.convention}}</label>
	</div>
</div>

<div class="row">
	<div class="col-4 col-line-height-high">
		<small class="text-muted">Tipo Ente</small>
		<label class="col-form-label">{{address.authority?.type}}</label>
	</div> 
	<div class="col-8 col-line-height-high">
		<small class="text-muted">Nome dell'Ente</small>
		<label class="col-form-label">{{address.authority?.description}}</label>
