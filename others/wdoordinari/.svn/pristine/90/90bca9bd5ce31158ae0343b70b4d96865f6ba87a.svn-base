.ngx-datatable.bootstrap {
  box-shadow: none;
  font-size: 13px;
  .datatable-header {
    height: unset !important;
    .datatable-header-cell {
      vertical-align: bottom;
      padding: 0.75rem;
      border-bottom: 1px solid #d1d4d7;
      background-color: #072c3f;
      color: white;
      .datatable-header-cell-label {
        line-height: 24px;
        color: white;
      }
    }
  }
  .datatable-body {
    .datatable-body-row {
      padding: 0px;
      border-top: 1px solid #d1d4d7;
      vertical-align: middle;
      border-right: 1px solid #d1d4d7;
      border-left: 1px solid #d1d4d7;
      &.datatable-row-even {
        background-color: rgba(0, 66, 81, 0.10);
      }
      &.active {
        background-color: #b4bcc2 !important;
        border-color: #7c8b8c;
        color: #FFF;
      }
      .datatable-body-cell {
        text-align: left;
        vertical-align: text-top;
        border-right: 1px solid #d1d4d7;
      }
    }
  }
  .datatable-footer {
    background: #424242;
    color: #ededed;
    margin-top: -1px;
    .page-count {
      line-height: 50px;
      height: 50px;
      padding: 0 1.2rem;
    }
    .datatable-pager {
      margin: 0 10px;
      vertical-align: top;
      ul {
        li {
          margin: 10px 0px;
          &:not(.disabled) {
            &.active,
            &:hover {
              a {
                background-color: #545454;
                font-weight: bold;
              }
            }
          }
        }
      }
      a {
        height: 22px;
        min-width: 24px;
        line-height: 22px;
        padding: 0;
        border-radius: 3px;
        margin: 0 3px;
        text-align: center;
        vertical-align: top;
        text-decoration: none;
        vertical-align: bottom;
        color: #ededed;
      }
      .datatable-icon-left,
      .datatable-icon-skip,
      .datatable-icon-right,
      .datatable-icon-prev {
        font-size: 18px;
        line-height: 27px;
        padding: 0 3px;
      }
    }
  }
}

.row-foreground-green {
  color: #396d16;
}

.row-foreground-yellow {
  color: #d08b32;
}

.row-foreground-red {
  color: #eb1b4c;
}

.row-background-pink {
  background: pink !important;
}
