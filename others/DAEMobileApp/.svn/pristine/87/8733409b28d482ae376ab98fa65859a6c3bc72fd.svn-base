#intervention-requests {
  .has-header {
    top: 44px;
  }

  .header {
    font-size: 22px;
    // iphone < 6
    @media (max-width: 320px) {
      font-size: 18px;
    }
  }
  .alert {
    background-color: $color_accent;
    color: $color_white;
    font-size: 22px;
    padding: 10px;
    //height: 65px;
    img {
      width: 80%;
    }
  }
  .intervention-card{
    background-color: $color_card;
    md-list-item{
      padding: 0 8px;
    }
    .detail-icon{
      font-size: 34px;
      margin-right: 25px;
      @media (max-width: 320px) {
        font-size: 28px;
        margin-right: 15px;
      }
    }
    .detail-label{
      font-size: 20px;
      @media (max-width: 320px) {
        font-size: 16px;
      }
      font-weight: bold;
      white-space: normal;
      text-overflow: clip;
    }
    .detail-data {
      font-size: 20px;
      @media (max-width: 320px) {
        font-size: 18px;
      }
      white-space: normal;
    }
  }

  md-list{
    // iphone < 6
    @media (max-width: 320px) {
      padding: 0;
    }
  }

  .alertDetail {
    p{
      font-family: $font_roboto_draft;
      font-size: 16px;
    }
    h2{
      font-family: $font_roboto_draft;
      font-size: 18px;
    }
    i{
      font-size: 36px;
    }
  }
  .intervention{
    width: 200px;
    height: 50px;
    color: $color_white;
    margin-bottom: 20px;
    &.gray{
      background-color: $dark;
      color: $color_black;
    }
    // iphone < 6
    @media (max-width: 320px) {
      height: 40px;
    }
  }
}