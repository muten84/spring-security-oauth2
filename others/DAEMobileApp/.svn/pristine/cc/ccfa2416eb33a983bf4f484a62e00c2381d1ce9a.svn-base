.center-map{
  background-color: white;
  color: rgba(0, 0, 0,0.6);
  cursor: pointer;
  width: 25px;
  height: 25px;
  line-height: 24px;
  text-align: center;
  margin: 60px 15px;
  i{
    font-size: large;
    vertical-align: middle;
    font-weight: bold;
  }
}
#dae-content{
  .has-header {
    top: 0
  }
  md-tabs {
    top:44px;
    &.stretch-height {
      md-tab-content > div {
        margin: 0;
        width: 100%;
        min-height: 100%;
        height: 100%;
      }
    }
    md-list{
      margin-bottom: 44px;
      padding: 0;
    }
    ng-map {
      &#customMap {
        display: block;
        width: 100%;
        height: 93%;
      }
    }
  }
  md-icon {
    font-size: 36px;
  }
  .list-dae{
    padding: 5px 35px 5px 106px;
    border-bottom: 1px solid rgba(0,0,0,0.12);
    &:first-child {
      border-top: 0px;
    }

    p{
      font-family: $font_roboto_draft;
      color: $color_black;
      font-size: 16px;
      font-weight: 500;
      @media (max-width: 320px) {
        font-size: 14px;
      }
    }
    h2{
      font-family: $font_roboto_draft;
      color: $color_black;
      font-size: 18px;
      font-weight: 500;
      @media (max-width: 320px) {
        font-size: 16px;
      }
    }
  }
  .imgdae{
    width: 25%;
    margin-right: 5px;
  }
  .infowindow{
    min-width: 200px;
    h2 {
      font-family: $font_roboto_draft;
      font-size: 12px;
      font-weight: 300;
      margin: 0;
    }
    h3 {
      font-family: $font_roboto_draft;
      font-size: 14px;
      font-weight: 400;
      margin: 0;
    }

    p{
      font-family: $font_roboto_draft;
      font-size: 10px;
      margin: 0;
      &.disponibilitaText{
        font-size: 12px;
        font-weight: 400;
      }
    }
    .disponibilitaOrari{
      font-family: $font_roboto_draft;
      font-size: 10px;
    }
    .navigation{
      i{
        font-size: 30px;
      }
    }
  }
}