/* Personalizzazione navbar */

.navbar-brand {
	font-family: 'Open Sans', sans-serif;
	font-weight: 400;
}

.navbar-brand .versioning {
	color: #deff00;
	font-weight: 300;
	font-size: 0.9em;
}

.navbar-nav>li>a {
	max-height: 50px;
	overflow: hidden;
}

.navbar {
	-webkit-box-shadow: 0 2px 2px rgba(7, 44, 63, 0.25);
	-moz-box-shadow: 0 2px 2px rgba(7, 44, 63, 0.25);
	box-shadow: 0 2px 2px rgba(7, 44, 63, 0.25);
}

.navbar .navbar-toggle {
	color: white;
	border: 0;
	width: 50px;
	height: 50px;
	margin: 0;
	border-radius: 0;
}

.navbar .avatar,
.navbar .nav-label,
.navbar .nav-sublabel {
	display: block;
}

.navbar .nav-label-container {
	max-width: 200px;
	float: left;
}

.navbar .nav-label {
	margin-top: -8px;
	float: left;
	/* in caso di avatar */
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
	max-width: 160px;
}

.navbar .nav-sublabel {
	font-size: 11px;
	line-height: 1;
	opacity: 0.8;
	margin-bottom: -3px;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
	clear: left;
}

.navbar .avatar {
	float: left;
	margin-right: 10px;
	position: relative;
	top: -5px;
}

.navbar .avatar img {
	height: 32px;
	width: 35px;
	display: block;
}

.navbar .icon-nav {
	font-size: 18px;
}

.navbar .dropdown-toggle {
	position: relative;
	padding-right: 35px;
	height: 50px;
}

.navbar .dropdown-toggle .caret {
	display: block;
	position: absolute;
	top: 50%;
	right: 10px;
	border: 0;
	width: 15px;
	height: 15px;
	margin-top: -7px;
	font-size: 16px;
}

.navbar .dropdown-toggle .icon-nav {
	position: relative;
	left: 5px;
}

.navbar .dropdown-header {
	text-transform: uppercase;
	color: white;
	opacity: 0.75;
	font-size: 12px;
}

.navbar .nav-button a {
	min-width: 52px;
	text-align: center;
}

.navbar .dropdown a {
	font-size: 13px;
}

.navbar-hidden+.layout-app .navbar {
	margin-top: -50px;
}

.navbar-secondary .dropdown-toggle .icon-nav {
	margin-right: -17px;
}

.navbar-default .navbar-nav>li>a {
	border-right: 1px solid #006b84;
}

.navbar-default .navbar-nav>li:first-child>a {
	border-left: 1px solid #006b84;
}

