/*common bootstrap*/
@import "common/bootstrap";

/* Importo le specifiche per i colori*/
@import "common/colors";

/* Iomporto gli stili base*/
@import "common/common";

/* importo i font */
@import "common/font";

@import "common/fa/stylesheets/font-awesome";

/* Personalizzazione navbar */
.navbar-brand {
	font-family: 'Open Sans', sans-serif;
	font-weight: 400;
}

.navbar-brand .versioning {
	color: #deff00;
	font-weight: 300;
	font-size: .9em;
}

.navbar-nav>li>a {
	max-height: 50px;
	overflow: hidden;
}

.navbar {
	-webkit-box-shadow: 0 2px 2px rgba(7, 44, 63, 0.25);
	-moz-box-shadow: 0 2px 2px rgba(7, 44, 63, 0.25);
	box-shadow: 0 2px 2px rgba(7, 44, 63, 0.25);
}

.navbar .navbar-toggle {
	color: white;
	border: 0;
	width: 50px;
	height: 50px;
	margin: 0;
	border-radius: 0;
}

.navbar .nav-label, .navbar .nav-sublabel, .navbar .avatar {
	display: block;
}

.navbar .nav-label-container {
	max-width: 200px;
	float: left;
}

.navbar .nav-label {
	margin-top: -8px;
	float: left;
	/* in caso di avatar */
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
	max-width: 160px;
}

.navbar .nav-sublabel {
	font-size: 11px;
	line-height: 1;
	opacity: .8;
	margin-bottom: -3px;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
	clear: left;
}

.navbar .avatar {
	float: left;
	margin-right: 10px;
	position: relative;
	top: -5px;
}

.navbar .avatar img {
	height: 32px;
	width: auto;
	display: block;
}

.navbar .icon-nav {
	font-size: 18px;
}

.navbar .dropdown-toggle {
	position: relative;
	padding-right: 35px;
	height: 50px;
}

.navbar .dropdown-toggle .caret {
	display: block;
	position: absolute;
	top: 50%;
	right: 10px;
	border: 0;
	width: 15px;
	height: 15px;
	margin-top: -7px;
	font-size: 16px;
}

.navbar .dropdown-toggle .icon-nav {
	position: relative;
	left: 5px;
}

.navbar .dropdown-header {
	text-transform: uppercase;
	color: black;
	opacity: .75;
	font-size: 12px;
}

.navbar .nav-button a {
	min-width: 52px;
	text-align: center;
}

.navbar .dropdown a {
	font-size: 13px;
}

.navbar-hidden+.layout-app .navbar {
	margin-top: -50px;
}

.navbar-secondary .dropdown-toggle .icon-nav {
	margin-right: -17px;
}

.navbar-default .navbar-nav>li>a {
	border-right: 1px solid #006b84;
}

.navbar-default .navbar-nav>li:first-child>a {
	border-left: 1px solid #006b84;
}

.page-header {
	background-color: transparent !important;
}

.bs-docs-section .page-header {
	border: 0;
	border-top: 2px solid #cddee2 !important;
	margin-top: 2em !important;
	padding-top: 2em !important;
}

/*ng table pager*/
.ng-table-pager {
	display: none;
}

.custom-pagination .ng-table-pager {
	display: block;
}

/*date picker*/
.full button span {
	background-color: limegreen;
	border-radius: 32px;
	/*color: black;*/
}

.partially button span {
	background-color: orange;
	border-radius: 32px;
	/*color: black;*/	
}

.btn-calendar {
	margin-bottom: -24px !important;
	margin-top: 1px!important;
	padding: 6px !important;
}