<?xml version="1.0" encoding="UTF-8"?>
<archetype-descriptor
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0 http://maven.apache.org/xsd/archetype-descriptor-1.0.0.xsd"
	name="WDO Angular Archetype"
	xmlns="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">


	<fileSets>
		<fileSet filtered="true" packaged="true" encoding="UTF-8">
			<directory>src/main/java</directory>
			<includes>
				<include>**/*.java</include>
			</includes>
		</fileSet>
		<fileSet encoding="UTF-8">
			<directory>src/main/sass</directory>
			<includes>
				<include>**/*.scss</include>
			</includes>
		</fileSet>
		<fileSet encoding="UTF-8">
			<directory>src/main/resources/public</directory>
			<includes>
				<include>*.js</include>
				<include>*.json</include>
				<include>*.MD</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>src/main/resources/public/app</directory>
			<includes>
				<include>*.js</include>
				<include>*.json</include>
				<include>*.html</include>
				<!-- fonts -->
				<include>fonts/**/*.eot</include>
				<include>fonts/**/*.svg</include>
				<include>fonts/**/*.ttf</include>
				<include>fonts/**/*.woff</include>
				<include>fonts/**/*.woff2</include>
				<!-- images -->
				<include>images/**/*.png</include>
				<include>images/**/*.jpg</include>
				<!-- partials -->
				<include>partials/**/*.html</include>
				<!-- scripts -->
				<include>scripts/**/*.js</include>
				<!-- styles -->
				<include>styles/**/*.css</include>
				<!-- views -->
				<include>views/**/*.html</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>src/main/resources/public/sass</directory>
			<includes>
				<include>*.scss</include>
				<include>**/*.scss</include>
			</includes>
		</fileSet>
	</fileSets>

</archetype-descriptor>